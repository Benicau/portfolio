{% extends 'base.html.twig' %}

{% block title %}Benoit caucheteux - Connexion{% endblock %}

{% block body %}
<div class="connexion">
                <h1>Connexion</h1>
                <form action="{{ path('security.login')}}" method="post">
                    <div class="group">
                        <label for="username">Adresse email</label>
                        <input type="email" id="username" name="_username">
                    </div>
                    <div class="group">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password"
                            placeholder="********" Style="background-color: #18534F;">
                    </div>
                    <button type="submit" class="">Se connecter</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
